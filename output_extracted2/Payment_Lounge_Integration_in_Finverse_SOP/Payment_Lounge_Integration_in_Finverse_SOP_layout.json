        },
        {
          "type": "image",
          "file": "/media/Payment_Lounge_Integration_in_Finverse_SOP/images/page1_img3.png"
        },
        {
          "type": "text",
          "text": "Refresh icon can be used"
        },
        {
          "type": "text",
          "text": "to fetch the latest status"
        },
        {
          "type": "text",
          "text": "Link can be disabled and resent, in case"
        },
        {
          "type": "text",
          "text": "of any issues using ‘Disable Link’ option"
        }
      ]
    },
